// BGG Financial Accelerator
digraph {
	node [fontname=Helvetica fontsize=12 shape=box style=rounded]
	edge [fontname=Helvetica fontsize=10]
	A [label="Positive Shock (e.g., Technology)"]
	B [label="Higher Firm Profits & Net Worth"]
	C [label="Lower Leverage (K/N)"]
	D [label="Lower External Finance Premium (EFP)"]
	E [label="Increased Investment (I)"]
	F [label="Higher Aggregate Demand & Output (Y)"]
	A -> B
	B -> C
	C -> D
	D -> E
	E -> F
	F -> B [label="Virtuous Cycle"]
}
